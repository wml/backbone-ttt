    <% cell_size = 125 %>
    <% grid_size = 3 * cell_size %>
    <% mini_cell_size = 50 %>
    <% mini_grid_size = 3 * mini_cell_size %>

    <script type="text/javascript">      
      var Graphics = {
        mainCellSize: <%= cell_size %>,
        miniCellSize: <%= mini_cell_size %>,
        lastMoveDrawn: -1,

        getMainContext: function() {
          return UI.getBoard()[0].getContext("2d");
        },

        getHistoryContext: function() {
          return Graphics.getHistory()[0].getContext("2d");
        },

        getHistory: function() {
          return $("#history_canvas");
        },

        eachRow: function(callback) {
          for (var row = 0; row < 3; ++row) {
            for (var col = 0; col < 3; ++col) {
              callback(row, col);			    
            }
          }
        },

        clearHistory: function() {
          Graphics.lastMoveDrawn = -1;
          Graphics.getHistory()[0].height = 0;
        },

        draw: function(state, winner) {
          this.drawState(
            this.getMainContext(), 0, Graphics.mainCellSize, state, winner
          );

          var last = Graphics.lastMoveDrawn;
          if (-1 != last) {
            var historyContext = this.getHistoryContext();
            var heightWithPad = <%=mini_grid_size%> + 30;

            Graphics.sizeHistory(
              historyContext, 
              (1 + last) * heightWithPad, 
              heightWithPad
            );

            $("#history").scrollTop(0);

            this.drawState(
              historyContext,
              15,
              Graphics.miniCellSize, 
              state, 
              winner
            );
          }

          ++Graphics.lastMoveDrawn;
        },

        sizeHistory: function(context, height, top) {
            var history = Graphics.getHistory()[0];

            if (0 == history.height) {
              history.height = height;
            }
            else {
              var tmp_e = $("<canvas></canvas>")[0];
              tmp_e.width = <%=mini_grid_size%>
              tmp_e.height = height;

              var tmp_c = tmp_e.getContext("2d");
              tmp_c.drawImage(history, 0, 0);

              history.height = height;
              context.drawImage(tmp_e, 0, top);
            }
        },

        drawState: function(ctx, y, cellsize, state, winner) {
          var s = cellsize;
          var x = 0;
          var ximg = $('#x-img')[0];
          var oimg = $('#o-img')[0];
          ctx.globalAlpha = 1;

          Graphics.eachRow(function(row, col) {
            var left = x + s * col;
            var top = y + s * row;

            ctx.beginPath();
            ctx.rect(left, top, s, s);
            ctx.fillStyle = "#e8e8e8";
            ctx.fill();
            ctx.lineWidth = 1;
            ctx.strokeStyle = "#666666";
            ctx.stroke();

            if (Game.States.Human == state[row][col]) {
              ctx.drawImage(ximg, left, top, cellsize, cellsize);
            }
            else if (Game.States.Opponent == state[row][col]) {
              ctx.drawImage(oimg, left, top, cellsize, cellsize);
            }
          });

          if (null != winner) {
            if (Game.States.Tie != winner.who) {
              Graphics.drawWinner(ctx, winner, y, cellsize);
            }

            ctx.beginPath();
            ctx.globalAlpha = 0.5;
            ctx.rect(0, y, 3 * cellsize, 3 * cellsize);
            ctx.fillStyle = "#fff";
            ctx.fill();
          }
        },

        drawWinner: function(ctx, winner, y, cellsize) {
          var s = cellsize;
          var color = (Game.States.Human == winner.who ? '#0F0' : '#F00');

          ctx.beginPath();
          ctx.lineWidth = cellsize / 12;
          ctx.lineCap = 'round';
          ctx.strokeStyle = color;

          if ('row' == winner.how) {
            ctx.moveTo(s/4, y + s/2 + s * winner.where);
            ctx.lineTo(s * 3 - s / 4, y + s/2 + s * winner.where);
          }
          else if ('col' == winner.how) {
            ctx.moveTo(s/2 + s * winner.where, y + s/4);
            ctx.lineTo(s/2 + s * winner.where, y + s * 3 - s / 4);
          }
          else if ('ulbr' == winner.how) {
            ctx.moveTo(s/4, y + s/4);
            ctx.lineTo(s * 3 - s / 4, y + s * 3 - s / 4);
          }
          else {
            ctx.moveTo(s/4, y + s * 3 - s / 4);
            ctx.lineTo(s * 3 - s / 4, y + s/4);
          }

          ctx.stroke();
        },

        hitTest: function(e) { 
          return {
            row: Math.floor(e.offsetY / Graphics.mainCellSize),
            col: Math.floor(e.offsetX / Graphics.mainCellSize),
          };
        }
      };

      var UI = {
        reset: function() {
          UI.game = new Game;

          $("#winner").css("display", "none");
          $("#newgame").css("display", "none");
          $("#instructions").css("display", "block");
          $('#movetime').text("");

          Graphics.clearHistory();
          Graphics.draw(UI.game.getState(), null);

          UI.getBoard().click(UI.move);
        },

        getBoard: function() {
          return $("#board");
        },

        move: function(e) {
          var canvas = UI.getBoard();
          UI.lock(canvas, "wait");

          $("#instructions").css("display", "none");          
          var rowcol = Graphics.hitTest(e);

          if (!UI.game.move(rowcol.row, rowcol.col, UI.userMoveSaved, UI.moveError)) {
            alert("Bogus move, broski");
            UI.unlock(canvas);
          }
        },

        lock: function(canvas, cursor) {
          canvas.css("cursor", cursor);
          canvas.unbind("click");
        },

        unlock: function(canvas) {
          canvas.css("cursor", "pointer");
          canvas.click(UI.move);
        },

        userMoveSaved: function(winner) {
          var game = UI.game;
          var ai = $('input[name=ai]:checked').val();

          Graphics.draw(game.getState(), winner);

          if (null == winner) {
            var start = (new Date()).getTime();
            game.getAIMove(ai, function(winner) { UI.aiMoveSaved(winner, start); }, UI.aiError);
          }
          else {
            UI.gameOver(winner);
          }
        },

        aiMoveSaved: function(winner, start) {
          Graphics.draw(UI.game.getState(), winner);
          var responseTime = (new Date()).getTime() - start;
          $('#movetime').text("response time: " + responseTime + "ms");

          if (null == winner) {
            UI.unlock(UI.getBoard());
          }
          else {
            UI.gameOver(winner);
          }
        },

        gameOver: function(winner) {
          var message = {};
          message[Game.States.Human] = "You Win :)",
          message[Game.States.Opponent] = "You Lose :(",
          message[Game.States.Tie] = "Tie :|",

          $('#winner').text(message[winner.who]);
          UI.lock(UI.getBoard(), "default");

          $("#newgame").css("display", "block");
          $("#winner").css("display", "block");
        },

        moveError: function(error) {
          if (error == undefined || error == null || error == "") {
            error = "unknown error";
          }

          UI.presentError("Failed to persist move. [" + error + "]");
        },

        aiError: function(error) {
          if (error == undefined || error == null || error == "") {
            error = "unknown error";
          }

          UI.presentError("Failed to communicate with AI. [" + error + "]");
        },

        presentError: function(message) {
          message = "<p>" + message + "</p><p><em>The server appears to be temporarily unavailable.<br/>Please refresh the page and try again later.</em></p>";
          $("#blocker div").html(message);
          $("#blocker").css("display", "block");
        },

        scaleBlocker: function() {
          $("#blocker")
            .css("height", $(window).height())
            .css("width", $(window).width());
        },
      };

      $(document).ready(function() {
        $('#newgame').click(UI.reset);
        $(window).resize(UI.scaleBlocker);

        UI.scaleBlocker();
        UI.reset();
      });
    </script>

