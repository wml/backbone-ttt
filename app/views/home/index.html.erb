    <% cell_size = 125 %>
    <% grid_size = 3 * cell_size %>

    <script type="text/javascript">      
      var UI = {
        cellSize: <%= cell_size %>,

        getContext: function() {
          return $('canvas')[0].getContext("2d");
        },

        eachRow: function(callback) {
          for (var row = 0; row < 3; ++row) {
            for (var col = 0; col < 3; ++col) {
		callback(row, col);			    
            }
	  }
        },

        draw: function(state) {
          var ctx = this.getContext();
          var s = UI.cellSize;
          var x = $('#x-img')[0];
          var o = $('#o-img')[0];

          UI.eachRow(function(row, col) {
            var left = s * col;
            var top = s * row;

            ctx.beginPath();
	    ctx.rect(left, top, s, s);
	    ctx.fillStyle = "#e8e8e8";
	    ctx.fill();
	    ctx.lineWidth = 1;
	    ctx.strokeStyle = "#666666";
	    ctx.stroke();

	    if (Game.States.Human == state[row][col]) {
	      ctx.drawImage(x, left, top);
	    }
	    else if (Game.States.Opponent == state[row][col]) {
	      ctx.drawImage(o, left, top);
	    }
          });
        },

        hitTest: function(e) { 
	  return {
            row: Math.floor(e.offsetY / UI.cellSize),
            col: Math.floor(e.offsetX / UI.cellSize),
          };
	}
      };

      $(document).ready(function(){
        var game = new Game;
        var canvas = $("canvas");
        var draw = function() {
          UI.draw(JSON.parse(game.get("state")));
          canvas[0].style.cursor = "pointer";
        };
        
        draw();

	canvas.click(function(e) {
          this.style.cursor = "wait";
          var rowcol = UI.hitTest(e);
          game.move(rowcol.row, rowcol.col, draw);
        });
      });
    </script>

    <style>
      body {
        margin: 0;
      }

      div {
        width: 800px;
        margin: 0 auto;
      }

      canvas {
        margin: 75px auto;
        display: block;
        cursor: pointer;
      }

      #header {
        width: 100%;
        background-color: #333;
        overflow: hidden;
        color: #fff;
        padding: 30px 0 30px;
      }

      h1 {
        text-align: center;
        font-size: 25px;
      }

      img {
        display: none;
      }
    </style>

    <div id="header">
      <div>
	<h1>Backbone / Rails Tic-Tac-Toe Minimax Machine</h1>
      </div>
    </div>

    <div>
      <canvas width="<%= grid_size %>" height="<%= grid_size %>"></canvas>
    </div>

    <%= image_tag "x.png", :id => "x-img" %>
    <%= image_tag "o.png", :id => "o-img" %>
